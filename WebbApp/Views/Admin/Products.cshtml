@model ProductRegisterViewModel
@{
    Layout = "_BackofficeLayout";
}

<section class="breadcrumb">
    <div class="container">
        <div class="content text-center text-dark">
            <h2>BACKOFFICE DASHBOARD</h2>
            <ul>
                <li>ADMIN</li>
                <li>PRODUCTS</li>
            </ul>
        </div>
    </div>
</section>
<section class="mb-5 p-5">
    <div class="shadow p-4 container col-sm-12 col-md-8 col-lg-7">
        <h4 class="title d-flex-inline mb-4"><span class="text-decoration-underline">Add</span> new Product</h4>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <form enctype="multipart/form-data" method="post" asp-action="products" novalidate>
            <div class="mb-3">
                <label asp-for="ArticleNumber" class="form-label"></label>
                <input asp-for="ArticleNumber" class="form-control" />
                <small><span asp-validation-for="ArticleNumber" class="text-danger"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="ProductName" class="form-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <small><span asp-validation-for="ProductName" class="text-danger"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <small><span asp-validation-for="Price" class="text-danger"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Currency" class="form-label"></label>
                <input asp-for="Currency" class="form-control" />
                <small><span asp-validation-for="Currency" class="text-danger"></span></small>
            </div>

            <div class="mb-3 form-check form-check-inline">
                <input class="form-check-input me-2" asp-for="OnSale" type="checkbox" />
                <label class="form-check-label" asp-for="OnSale">On Sale</label>
                <span class="checkmark"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <small><span asp-validation-for="Quantity" class="text-danger"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Image" class="form-label"></label>
                <input asp-for="Image" class="form-control" />
                <small><span asp-validation-for="Image" class="text-danger"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Ingress" class="form-label"></label>
                <textarea asp-for="Ingress" class="form-control" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="VendorName" class="form-label"></label>
                <input asp-for="VendorName" class="form-control" />
            </div>
            <div class="d-flex ">
                <div class="mb-3 border p-3 w-100">
                    <label class="text-decoration-underline pb-2">Select Categories:</label>
                    @foreach (SelectListItem category in ViewBag.Categories)
                    {
                        <div class="form-check form-check-inline d-flex">
                            <input class="form-check-input" type="checkbox" id="category-@category.Text-@category.Value" name="Categories" value="@category.Value" checked="@category.Selected">
                            <label for="category-@category.Text-@category.Value" class="form-check-label ms-2 text-capitalize">@category.Text</label>
                            <span class="checkmark"></span>
                        </div>
                    }
                </div>
                <div class="mb-3 border p-3 w-100">
                    <label class="text-decoration-underline pb-2">Select Tags:</label>
                    @foreach (SelectListItem tag in ViewBag.Tags)
                    {
                        <div class="form-check form-check-inline d-flex">
                            <input class="form-check-input " type="checkbox" id="tag-@tag.Text-@tag.Value" name="Tags" value="@tag.Value" checked="@tag.Selected">
                            <label for="tag-@tag.Text-@tag.Value" class="form-check-label ms-2 text-capitalize">@tag.Text</label>
                            <span class="checkmark"></span>
                        </div>
                    }
                </div>
            </div>

            <button type="submit" class="btn-theme mb-3">Add Product</button>
        </form>
    </div>
</section>
