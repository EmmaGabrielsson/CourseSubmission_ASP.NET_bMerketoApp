@model ProductRegisterViewModel
@{
    Layout = "_BackofficeLayout";

    var categories = await categoryRepo.GetAllDataAsync();
}

<section class="breadcrumb">
    <div class="container">
        <div class="content text-center text-dark">
            <h2>BACKOFFICE DASHBOARD</h2>
            <ul>
                <li>ADMIN</li>
                <li>PRODUCTS</li>
            </ul>
        </div>
    </div>
</section>
<section class="mb-5 p-5">
    <div class="shadow p-4 container col-sm-12 col-md-8 col-lg-7">
        <h4 class="title d-flex-inline mb-4"><span class="text-decoration-underline">Add</span> new Product</h4>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <form method="post" asp-action="products" asp-controller="admin" novalidate>
            <div class="mb-3">
                <label asp-for="ArticleNumber" class="form-label"></label>
                <input asp-for="ArticleNumber" class="form-control" />
                <small><span asp-validation-for="ArticleNumber" class="text-danger"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="ProductName" class="form-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <small><span asp-validation-for="ProductName" class="text-danger"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <small><span asp-validation-for="Price" class="text-danger"></span></small>
            </div>
            <div class="mb-3 form-check form-check-inline">
                <input class="form-check-input me-2" asp-for="OnSale" type="checkbox" />
                <label class="form-check-label" asp-for="OnSale">On Sale</label>
                <span class="checkmark"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <small><span asp-validation-for="Quantity" class="text-danger"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Image" class="form-label"></label>
                <input asp-for="Image" class="form-control" />
                <small><span asp-validation-for="Image" class="text-danger"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Ingress" class="form-label"></label>
                <textarea asp-for="Ingress" class="form-control" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="VendorName" class="form-label"></label>
                <input asp-for="VendorName" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Select Categories:</label>
                @foreach (var category in categories)
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input m-2" type="checkbox" name="CategoryIds" value="@category.Id">
                        <label class="form-check-label p-1" >@category.CategoryName</label>
                        <span class="checkmark"></span>
                    </div>
                }
            </div>
            <button type="submit" class="btn-theme mb-3">Add Product</button>
        </form>
    </div>
</section>
