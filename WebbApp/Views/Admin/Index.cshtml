@model UpdateRoleViewModel
@{
    Layout = "_BackofficeLayout";
    var users = await userService.GetAllAsync();
    var roles = await userService.GetAllRolesAsync();
}

<section class="breadcrumb">
    <div class="container">
        <div class="content text-center text-dark">
            <h2>BACKOFFICE DASHBOARD</h2>
            <ul>
                <li>ADMIN</li>
            </ul>
        </div>
    </div>
</section>
@if(users != null) 
{       
<section>
    <div class="container">
        <h4 class="my-4"><span class="text-decoration-underline">Update</span> User Role</h4>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <form metod="post" asp-action="index" asp-controller="admin">
            <div class="mb-3">
                <label asp-for="UserId"></label>
                <input asp-for="UserId"/>
                <small><span asp-validation-for="UserId" class="text-danger"></span></small>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" asp-for="Role" for="inputGroupSelect01">Roles</label>
                </div>
                <select name="Role" asp-for="Role" class="custom-select form-control" id="inputGroupSelect01">
                    <option selected>Choose...</option>
                    @foreach (var role in roles)
                    {
                        <option value="@role.Name">@role.Name</option>                            
                    }
                </select>
            </div>
            <button class="btn-theme" type="submit">Change Role</button>
        </form>
    </div>
    <div class="m-5">
        <h4>Users:</h4>
            <table class="table shadow">
            <thead class="table-dark">
                <tr>
                    <th scope="col">User Id</th>
                    <th scope="col">Role</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">E-mail</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var user in users)
                    {
                        @if(await userManager.IsInRoleAsync(user, "admin") )
                        {
                            <tr class="table-secondary">
                            <th scope="row">@user.Id</th>
                            <td>Admin</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            </tr>                    
                        }
                        else if (await userManager.IsInRoleAsync(user, "user"))
                        {
                            <tr>
                            <th scope="row">@user.Id</th>
                            <td>User</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            </tr>
                        }
                    }
            </tbody>
        </table>
    </div>
</section>
}
