@{
    var saleItems = productService.GetTopSaleItems();
}

@if (saleItems != null)
{
     <section class="top-selling">
        <div class="container-fluid">
            <h1 class="title">Top selling products in this week</h1>
            <div class="grid">

             @foreach (var item in saleItems)
             {
                  <partial name="/Views/Partials/_GridCollectionItem.cshtml" model="item" />
             }

            <div class="load-more">
                <button class="btn-outline-white">LOAD MORE <i class="fa-solid fa-rotate-right"></i></button>
            </div>
            </div>
        </div>    
    </section>
}