@model LoginViewModel

<section class="login-form">
    <div class="container col-sm-10 col-md-8 col-lg-7">
        <h4 class="title"><span class="text-decoration-underline">Please</span> Login to Your Account</h4>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <form method="post" asp-action="login" novalidate>
            <div class="form-group">
                <div class="d-flex flex-row">
                    <label asp-for="Email" class="form-label"></label>
                    <a class="link text-danger ms-4" asp-controller="account" asp-action="register">Don´t have an Account yet?</a>
                </div>
                <input asp-for="Email" class="form-control" />
                <small><span asp-validation-for="Email" class="text-danger"></span></small>
            </div>
            <div class="form-group">
                <div class="d-flex flex-row justify-content-between">
                    <label asp-for="Password" class="form-label"></label>
                    <a class="link text-danger" asp-controller="account" asp-action="forgotpassword">Forgot Your Password?</a>
                </div>
                <input asp-for="Password" class="form-control" />
                <small><span asp-validation-for="Password" class="text-danger"></span></small>
            </div>
            <div class="remember">
                <input asp-for="RememberMe" class="custom-checkbox" />
                <label asp-for="RememberMe"></label>
                <span class="checkmark"></span>
            </div>
            <button type="submit" class="btn-theme">Submit</button>
        </form>
    </div>
</section>