@model EmailViewModel

<section class="password-form">
    <div class="container col-sm-10 col-md-8 col-lg-7">
        <h4 class="title"><span class="text-decoration-underline">Change</span> Password to Your Account</h4>
        <p>Please enter your e-mail and you will shortly revieve a response in your inbox with instructions to update your password.</p>
        <form method="post" novalidate>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <small><span asp-validation-for="Email" class="text-danger"></span></small>
            </div>
            <button type="submit" class="btn-theme">Submit</button>
        </form>
    </div>
</section>