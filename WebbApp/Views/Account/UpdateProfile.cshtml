@model UpdateAccountViewModel
@{
    var userInfo = await userService.GetAsync(x => x.UserName == User.Identity!.Name);
    var adresses = await adressService.GetUserAdressAsync(userInfo);
}

<section class="breadcrumb">
    <div class="container">
        <div class="content text-center text-dark">
            <h2>ACCOUNT</h2>
            <ul>
                <li>HOME</li>
                <li>ACCOUNT</li>
                <li>UPDATE-PROFILE</li>
            </ul>
        </div>
    </div>
</section>
<section class="p-5">
    <div class="container p-4 shadow col-sm-10 col-md-8 col-lg-7">
        <h4 class="title mb-4 d-flex-inline"><span class="text-decoration-underline">Update</span> Profile Information</h4>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <form method="post" asp-action="updateprofile" asp-controller="account" novalidate>
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" value="@userInfo.FirstName" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" value="@userInfo.LastName" class="form-control" />
            </div>
            <label>Update Adress
                <a class="text-decoration-none" href="#">Add another Adress</a>
            </label>
            @foreach (var adress in adresses)
            {
                <div>
                    <div class="mb-3">
                        <label asp-for="StreetName" class="form-label"></label>
                        <input asp-for="StreetName" value="@adress.StreetName" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="PostalCode" class="form-label"></label>
                        <input asp-for="PostalCode" value="@adress.PostalCode" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="City" class="form-label"></label>
                        <input asp-for="City" value="@adress.City" class="form-control" />
                    </div>
                </div>                
            }
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" value="@userInfo.PhoneNumber" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Company" class="form-label"></label>
                <input asp-for="Company" value="@userInfo.CompanyName" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <small><span asp-validation-for="NewPassword" class="text-danger"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <small><span asp-validation-for="ConfirmPassword" class="text-danger"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label"></label>
                <input asp-for="ImageFile" class="form-control" />
            </div>
            <button type="submit" class="btn-theme d-md-flex">Submit</button>
        </form>
    </div>
</section>
