@model ContactFormViewModel

<section class="breadcrumb">
    <div class="container">
        <div class="content text-center text-dark">
            <h2>CONTACT</h2>
            <ul>
                <li>HOME</li>
                <li>CONTACT</li>
            </ul>
        </div>
    </div>
</section>
<section class="contact-form">
    <div class="container col-lg-8 shadow ">
        <div class="title"><span class="text-decoration-underline">Write</span> something</div>
        <div class="fs-5 p-3 mb-5 text-center text-primary" asp-validation-summary="ModelOnly"></div>
        <form metod="post" asp-action="index" asp-controller="contacts" novalidate>

            <div class="name form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" required>
                <small><span asp-validation-for="Name" class="text-danger"></span></small>
            </div>
            <div class="email form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" required />
                <small><span asp-validation-for="Email" class="text-danger"></span></small>
            </div>
            <div class="phoneNumber form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber">
            </div>
            <div class="companyName form-group">
                <label asp-for="Company">Company (optional)</label>
                <input asp-for="Company">
            </div>
            <div class="message form-group">
                <label asp-for="Message"></label>
                <textarea asp-for="Message" ></textarea>
                <small><span asp-validation-for="Message" class="text-danger"></span></small>
            </div>
            <button type="submit" class="btn-theme">Submit</button>
            </form>
    </div>
</section>

<partial name="~/Views/Partials/_GoogleMaps.cshtml" />
